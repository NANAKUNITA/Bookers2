<table class="table">
  <h2>User info</h2>
    <thead>
      <tr>
        <%= image_tag @user.get_profile_image(100, 100) %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>Name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th colspan="2">
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-dark"%>
          <span class="glyphicon glyphicon-person-fill-gear" aria-hidden="true"></span>
          <% end %>
        </th>
      </tr>
    </tbody>
</table>