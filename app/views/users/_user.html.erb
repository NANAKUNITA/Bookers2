<table class="table">
  <h2>User info</h2>
    <thead>
      <tr>
       <% if @book.user.profile_image.attached? %>
        <%= image_tag @book.user.profile_image,size: '100x100' %>
       <% else %>
        <%= image_tag 'no_image.jpg'%>
       <% end %>
     </tr>

    </thead>
    <tbody>
      <tr>
        <th>Name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      <tr>
        <th colspan="2">
          <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-dark"%>
          <span class="glyphicon glyphicon-person-fill-gear" aria-hidden="true"></span>
          <% end %>
        </th>
      </tr>
    </tbody>
</table>