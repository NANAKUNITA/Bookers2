<div class="container">
    <div class="row">
        <div class="col-md-3">
          <%= render 'users/user', user: @user %>
        <h2>New book</h2>
          <%= render 'books/book', book: @book_new %>
         </div>
      <div class="col-md-8">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100)%></td>
            <td><%= link_to @user.name, user_path(@user) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
     <% if @book.user_id == current_user.idl%>
       <td><%= link_to "Destroy", book_path(@book), method: :delete, "date-confirm"=>"本当に消しますか？", class: "btn btn-danger" %></td>
       <td><%= link_to "Edit", edit_book_path(@book),class: "btn btn-success" %></td>
     <% end %>
          </tr>
        </table>
      </div>
    </div>
</div>