<% if @book.errors %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
  <% end %>

<div class="container">
  <div class="row">
     <div class="col-md-3">
          <%= render 'users/user', user: @user %>
        <h2>New book</h2>
          <%= render 'books/book', book: @book %>
     </div>
     <div class="col-md-8">
       <h2>Books</h2>
       <table class="table table-hover table-inverse">
          <thead>
             <th></th>
             <th>Title</th>
             <th>opinion</th>
          </thead>
          <tbody>
             <% @books.each do |book|%>
               <tr>
                  <td><% if book.user.profile_image.attached? %>
                      <%= image_tag book.user.profile_image, size: '20x20' %>
                      <% else %>
                      <%= image_tag 'no_image.jpg'%>
                      <% end %>
                  </td>
                   <td><%= link_to user_path(book.user)do %>
                     <% end %>
                  </td>
                  <td><%= link_to book.title, book_path(book.id)%></td>
                  <td><%= link_to book.body %></td>
               </tr>
          </tbody>
        </table>
     </div>
  </div>
</div>